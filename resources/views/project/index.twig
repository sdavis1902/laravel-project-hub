{% extends 'layouts.admin_main' %}

{% block pagecss %}
	<!-- DataTables CSS -->
    <link href="{{ url('assets/plugins/datatables/dataTables.bootstrap.css') }}" rel="stylesheet">
    <!-- DataTables Responsive CSS -->
    <link href="{{ url('assets/plugins/datatables/extensions/Responsive/css/dataTables.responsive.css') }}" rel="stylesheet">
{% endblock %}

{% block pagejs %}
	<!-- DataTables JavaScript -->
    <script src="{{ url('assets/plugins/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ url('assets/plugins/datatables/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ url('assets/plugins/datatables/extensions/Responsive/js/dataTables.responsive.js') }}"></script>
    <script src="{{ url('assets/js/project.index.js') }}"></script>
{% endblock %}

{% block title %}
	Projects List
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-lg-12">
			<div class="box">
				<!-- /.panel-heading -->
				<div class="box-body">
					<table width="100%" class="table table-striped table-bordered table-hover" id="datatables-projects">
						<thead>
							<tr>
								<th>ID</th>
								<th>Name</th>
								<th>Status</th>
								<th>Assigned To</th>
								<th></th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							{% for project in projects %}
								<tr class="odd gradeX">
									<td><a href="{{ url('project/edit/' ~ project.id) }}">{{ project.id }}</a></td>
									<td>{{ project.name }}</td>
									<td>{{ project.status }}</td>
									<td>{{ project.user.last_name }}, {{ project.user.first_name }}</td>
									<td><a href="{{ url('project/dashboard/' ~ project.id) }}">Dashboard</a></td>
									<td><a href="{{ url('task/list/' ~ project.id) }}">Tasks</a></td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
					<!-- /.table-responsive -->
				</div>
				<!-- /.panel-body -->
			</div>
			<!-- /.panel -->
		</div>
		<!-- /.col-lg-12 -->
	</div>
	<!-- /.row -->
{% endblock %}
