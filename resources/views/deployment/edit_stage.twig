{% extends 'layouts.admin_main' %}

{% block title %}
	{{ stage ? 'Edit':'New' }} {{ stage.project.name }} Deployment Stage
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-lg-12">
			<div class="box">
				<div class="box-header">
					Stage Details
				</div>
				<div class="box-body">
					<div class="row">
						<form role="form" method="POST">
							<input type="hidden" name="_token" value="{{ csrf_token()|raw }}" />
							<div class="col-lg-6">
								<div class="form-group{{ errors.has('name') ? ' has-error':'' }}">
									<label>Name</label>
									<input name="name" class="form-control" value="{{ old('name') ? old('name') : ( stage ? stage.name:'' )}}">
									{% if errors.has('name') %}
										{% for error in errors.get('name') %}
                                            <p class="help-block">
                                                {{ error }}
                                            </p>
                                        {% endfor %}
                                    {% endif %}
								</div>
								<div class="form-group{{ errors.has('status') ? ' has-error' : '' }}">
                                    <label class="control-label">Status</label>
                                    <select name="status" id="status" class="form-control">
                                        {% if ( old('status') and old('status') == 'Inactive' ) or ( stage and stage.status == 'Inactive' ) %}
                                            <option value="Active">Active</option>
                                            <option selected value="Inactive">Inactive</option>
                                        {% else %}
                                            <option selected value="Active">Active</option>
                                            <option value="Inactive">Inactive</option>
                                        {% endif %}
                                    </select>
                                    {% if errors.has('status') %}
                                        {% for error in errors.get('status') %}
                                            <p class="help-block">{{ error }}</p>
                                        {% endfor %}
                                    {% endif %}
                                </div>
								<div class="form-group{{ errors.has('description') ? ' has-error':'' }}">
									<label>Description</label>
									<textarea name="description" class="form-control" rows="3">{{ old('description') ? old('description') : ( stage ? stage.description:'' )}}</textarea>
									{% if errors.has('description') %}
										{% for error in errors.get('description') %}
                                            <p class="help-block">
                                                {{ error }}
                                            </p>
                                        {% endfor %}
                                    {% endif %}
								</div>
							</div>
							<div class="col-lg-6">
								<div class="form-group{{ errors.has('branch') ? ' has-error':'' }}">
									<label>Repository Branch</label>
									<input name="branch" class="form-control" value="{{ old('branch') ? old('branch') : ( stage ? stage.branch:'' )}}">
									{% if errors.has('branch') %}
										{% for error in errors.get('branch') %}
                                            <p class="help-block">
                                                {{ error }}
                                            </p>
                                        {% endfor %}
                                    {% endif %}
								</div>
								<div class="form-group{{ errors.has('host') ? ' has-error':'' }}">
									<label>Host</label>
									<input name="host" class="form-control" value="{{ old('host') ? old('host') : ( stage ? stage.host:'' )}}">
									{% if errors.has('host') %}
										{% for error in errors.get('host') %}
                                            <p class="help-block">
                                                {{ error }}
                                            </p>
                                        {% endfor %}
                                    {% endif %}
								</div>
								<div class="form-group{{ errors.has('host_user') ? ' has-error':'' }}">
									<label>Host User</label>
									<input name="host_user" class="form-control" value="{{ old('host_user') ? old('host_user') : ( stage ? stage.host_user:'' )}}">
									{% if errors.has('host_user') %}
										{% for error in errors.get('host_user') %}
                                            <p class="help-block">
                                                {{ error }}
                                            </p>
                                        {% endfor %}
                                    {% endif %}
								</div>
								<div class="form-group{{ errors.has('host_become') ? ' has-error':'' }}">
									<label>Host Become</label>
									<input name="host_become" class="form-control" value="{{ old('host_become') ? old('host_become') : ( stage ? stage.host_become:'' )}}">
									{% if errors.has('host_become') %}
										{% for error in errors.get('host_become') %}
                                            <p class="help-block">
                                                {{ error }}
                                            </p>
                                        {% endfor %}
                                    {% endif %}
								</div>
								<div class="form-group{{ errors.has('deploy_path') ? ' has-error':'' }}">
									<label>Deployment Path</label>
									<input name="deploy_path" class="form-control" value="{{ old('deploy_path') ? old('deploy_path') : ( stage ? stage.deploy_path:'' )}}">
									{% if errors.has('deploy_path') %}
										{% for error in errors.get('deploy_path') %}
                                            <p class="help-block">
                                                {{ error }}
                                            </p>
                                        {% endfor %}
                                    {% endif %}
								</div>
								<button type="submit" class="btn btn-default">Save</button>
							</div>
						</form>
						<!-- /.col-lg-6 (nested) -->
					</div>
					<!-- /.row (nested) -->
				</div>
				<!-- /.panel-body -->
			</div>
			<!-- /.panel -->
		</div>
		<!-- /.col-lg-12 -->
	</div>
	<!-- /.row -->
{% endblock %}
