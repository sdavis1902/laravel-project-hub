{% extends 'layouts.admin_main' %}

{% block pagejs %}
	<script src="{{ url('assets/js/deployment.index.js') }}"></script>
{% endblock %}

{% block title %}
	Deployments Dashboard
{% endblock %}

{% block content %}
	<div class="pull-right" style="margin-top: -40px; margin-bottom: 0px; z-index: 1; position: relative;">
		<a href="{{ url('deployment/create-project') }}" class="btn btn-success"><i class="fa fa-file"></i> Create Project</a>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="box box-solid">
				<!-- /.box-header -->
				<div class="box-body">
					{% for project in projects %}
						<table width="100%" class="table table-bordered table-hover">
							</thead>
								<tr>
									<td width="50%"><i class="fa fa-folder"></i> {{ project.name }}</td>
									<td width="50%">
										<div class="pull-right">
											<a href="{{ url('deployment/edit-project/' ~ project.id) }}" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
											<a href="{{ url('deployment/delete-project/' ~ project.id) }}" class="btn btn-danger btn-xs folder-delete"><i class="fa fa-times"></i></a>
											<a href="{{ url('deployment/create-stage/' ~ project.id) }}" class="btn btn-success btn-xs"><i class="fa fa-file"></i> Create Stage</a>
										</div>
									</td>
								</tr>
							</thead>
							<tbody>
								{% for stage in project.stages %}
									<tr>
										<td><i class="fa fa-level-up fa-rotate-90" style="margin-right:8px; margin-left:8px;"></i><i class="fa fa-file-o"></i> {{ stage.name }}</td>
										<td>
											<div class="pull-right">
												<a href="{{ url('deployment/edit-stage/' ~ project.id ~ '/' ~ stage.id) }}" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
												<a href="{{ url('deployment/delete-stage/' ~ stage.id) }}" class="btn btn-danger btn-xs page-delete"><i class="fa fa-times"></i></a>
												<a href="{{ url('deployment/stage-history/' ~ stage.id) }}" class="btn btn-success btn-xs">View</a>
											</div>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
						<br />
					{% endfor %}
				</div>
				<!-- /.box-body -->
			</div>
		    <!-- /.box -->
		</div>
        <!-- /.col -->
	</div>
{% endblock %}
